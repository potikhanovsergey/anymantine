{
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "cjs",
    "jest-config.js",
    "configuration/storybook/main.js",
    "lib/**/*",
    "esm/**/*",
    "cjs/**/*"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "declarationDir": "lib",
    "paths": {
      "@mantine/core": [
        "../mantine-core/src"
      ],
      "@mantine/hooks": [
        "../mantine-hooks/src"
      ],
      "@mantine/tests": [
        "../mantine-tests/src"
      ]
    },
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
